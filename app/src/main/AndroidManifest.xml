<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.santiago.cuantassabes">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- permissions for leku picker location -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/log_216"
        android:label="@string/app_name"
        android:roundIcon="@drawable/log_216"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PacientActivity" />
        <activity android:name=".ImagesActivity" />
        <activity android:name=".QuizActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppThemeActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DoctorActivity" />
        <activity android:name=".PacientDetailsActivity"></activity>
    </application>

</manifest>